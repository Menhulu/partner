  background-size: 100% 100%;
}

.container-main-top {
  color: #fff;
  font-size: 12px;
  text-align: center;
  padding: 0px 5px;
  height: 82%;
}

.container-main-one {
  display: flex;
  flex-wrap: wrap;
}

.container-main-one-item {
  width: 25%;
}

.container-main-one-item-inner {
  background: linear-gradient(132deg, #0064b4, #62c6f2 100%);
  margin: 5rpx;
  box-shadow: 0 2px 5px 0 rgba(2, 50, 141, 0.59);
